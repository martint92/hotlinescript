<%= link_to '[new]', new_section_path, :remote => true, :class => 'edit-button' if can_edit? %>
<% if section.try(:title).blank? %>
    <br>
    <h1>There's Nothing Here!</h1>
    <p>Nothing has been posted here!</p>
    <p>If you're not en editor or admin, you cannot create any posts. Please ask them to create content for you.</p>
<% else %>
    <% if can_edit? %>
    <%= link_to '[delete]', section_path(section), remote: true, method: :delete, data: { confirm: "Are you sure? This cannot be undone." }, :class => "edit-button" %>
    <%= link_to '[edit]', edit_section_path(section), remote: true, :class => "edit-button" %>
    <% end %>
    <br />
    <h1><%= section.title %></h1>
    <p><%= section.body.html_safe %></p>
    <br>
    <div id="guest-q"><p>Would the caller like information emailed to them?  <%= link_to "Yes", new_guest_path, remote: true %></p></div>
    <div id="e-sent"></div>
    <div id="new-guest"></div>
    <% if section.sub_sections %>
        <% section.sub_sections.each do |ss| %>
            <div class="qaa-box">
                <h4 class="qaa-title">
                    <%= image_tag 'plus.png', :size => '14x14', :class => "plus-img" %> 
                    <%= image_tag 'minus.png', :size => '14x14', :class => "minus-img" %>
                    <%= ss.title %>
                </h4>
                <div class="answers-box">
                    <%= ss.body.html_safe %>
                </div>
            </div>
        <% end %>
    <% end %>
    <% if section.links %>
        <% section.links.each do |link| %>
            <div class="section-links">
                    <%= link_to link.option, fetch_sections_path(:section_title => link.option), :remote => true %>
            </div>
        <% end %>
    <% end %> 
<% end %>