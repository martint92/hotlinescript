<div class="card container">
<h1 class="card-title"><%= @user.first_name%> <%= @user.last_name %></h1>
    <div class="row">
        <div class="col-6">
            <table class="table table-borderless">
                <tr>
                    <td>First Name: </td>
                    <td><%=@user.first_name %></td>
                </tr>
                <tr>
                    <td>Last Name: </td>
                    <td><%= @user.last_name %></td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <td>Permissions: </td>
                    <td><%= @user.role.capitalize %></td>
                </tr>
            </table>
        </div>
        <div class='col-6'>
            <%= link_to edit_user_path(@user) do %>
                <button type="button" class="btn btn-primary">Edit Profile</button>
            <% end %>
            <% if @user == current_user || is_admin? %>
                <%= link_to @user, method: :delete, data: { confirm: "Are you sure? This cannot be undone." } do %>
                    <button type="button" class="btn btn-primary">Delete Profile</button>
                <% end %>
            <% end %>
        </div>
    </div>
</div>