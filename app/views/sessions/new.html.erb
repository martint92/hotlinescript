<div class="signup-box">    
    <h1>Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, :placeholder => "Email", :class => "signup-box-element" %>
        <%= f.password_field :password,  :placeholder => "Password", :class => "signup-box-element" %>
        <%= f.submit "Log In", class: "btn-submit" %>
    <% end %>
</div>