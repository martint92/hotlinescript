<%= link_to '[new]', new_section_path, :remote => true, :class => 'edit-button' if can_edit? && Topic.all.any?%>
<% if topic.try(:title).blank? %>
    <br>
    <h1>There's Nothing Here!</h1>
    <p>Either you're editing the title of this page, or nothing has been posted here!</p>
    <p>If you're not en editor or admin, you cannot create any posts. Please ask them to create content for you.</p>
<% else %>
    <h1><%= topic.title %></h1>
    <% if topic.try(:sections) %>
        <% topic.sections.each do |section| %>
            <div id="<%=section.css_id%>">
                <% if can_edit? %>
                <%= link_to '[delete]', section_path(section), remote: true, method: :delete, data: { confirm: "Are you sure? This cannot be undone." }, :class => "edit-button" %>
                <%= link_to '[edit]', edit_section_path(section), remote: true, :class => "edit-button" %>
                <% end %>
                <h2><%= section.title %></h2>
                <%= section.body.html_safe %>
                <% if section.sub_sections %>
                    <% section.sub_sections.each do |ss| %>
                        <div class="qaa-box" id="<%= ss.css_id %>">
                            <h4 class="qaa-title">
                                <%= image_tag 'plus.png', :size => '14x14', :class => "plus-img" %> 
                                <%= image_tag 'minus.png', :size => '14x14', :class => "minus-img" %>
                                <%= ss.title %>
                            </h4>
                            <div class="answers-box">
                                <%= ss.body.html_safe %>
                                <% if ss.micro_sections %>
                                    <% ss.micro_sections.each do |ms| %>
                                        <div id="<%= ms.css_id %>">
                                            <%= ms.title %>
                                            <%= ms.body.html_safe %>
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        <% end %>
    <% end %>
<% end %>