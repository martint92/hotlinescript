<div class="container" id="<%= topic.sortable_id %>">
        <% if can_edit? %>
            <div id="<%= topic.css_id %>" class="row">
                <h6 class="col-6"><%= topic.title%></h6>
                <p class="col-6 text-right">
                    <%= link_to  '[edit]', edit_topic_path(topic), remote: true %>
                    <%= link_to '[x]', topic_path(topic), remote: true, method: :delete, data: { confirm: "Are you sure? This cannot be undone, and it will delete all Sections, Sub_Sections and Micro_Sections under it" } %>
                </p>
            </div>
        <% else %>
            <h6 id="<%= topic.css_id %>"><%= topic.title%></h6>
        <% end %>
    <% if topic.try(:sections) %>
    <ul class="sortable section-menu <%= topic.css_id %> nav nav-pills">
        <% topic.sections.order(:priority).all.each do |section|%>
            <% if section.try(:sub_sections) %>
                <li id="<%= section.sortable_id%>" class=" dropdown">
                    <%= link_to section.title, from_nav_path(topic, anchor: section.css_id), remote: true, 'data-toggle' => 'dropdown', 'role' =>' button', 'aria-haspopup' => 'true', 'aria-expanded' => 'false' %>
                    <div class='dropdown-menu'>
                        <% section.sub_sections.all.each do |ss| %>
                            <%= link_to ss.title, from_nav_path(topic, anchor: ss.css_id), remote: true, class: 'dropdown-item' %>
                        <% end %>
                    </div>
                </li>
            <% else %>
                <li id="<%= section.sortable_id%>" >
                    <%= link_to section.title, from_nav_path(topic, anchor: section.css_id), remote: true %>
                </li>
            <% end %>
        <% end %>
    </ul>
<% end %>
</div>
