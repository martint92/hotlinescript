<!DOCTYPE html>
<html>
  <head>
    <title>Hotline</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to image_tag("logo_hilsc.png"), root_path, :class => "logo" %>
      <nav>
        <div class="nav-item-div <%= 'active-nav' if current_page?('/instructions')%>"><%= link_to 'Instructions', instructions_path, :class => "nav-item" %></div>
        <div class="nav-item-div <%= 'active-nav' if current_page?('/topics')%>"><%= link_to 'Script', topics_path, :class => "nav-item" %></div>
        <div class="nav-item-div <%= 'active-nav' if current_page?('/referrals')%>"><%= link_to 'Referrals', referrals_path, :class => "nav-item" %></div>
        <div class="nav-item-div <%= 'active-nav' if current_page?('/tracking')%>"><%= link_to 'Tracking', '/tracking', class: "nav-item" %></div>
      </nav>
      <div class="login">
        <% if current_user %>
          <%= link_to current_user.first_name, user_path(current_user), :class => "nav-item" %>
          <%= link_to "Log out", '/logout', method: "delete", :class => "nav-item" %>
        <% else %>
          <%= link_to 'Login', '/login', :class => "nav-item"%>
        <% end %>
      </div>
    </header>

    <main>
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:success] %>
        <div class="success"><%= flash[:success] %></div>
      <% end %>
      <%= yield %>
    </main>

    <footer>
    </footer>
  </body>
</html>
