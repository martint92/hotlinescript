<% if @reminder.nil? %>
    <p>
        This area is currently blank. Why don't you add something? 
    </p>
    <%= link_to '[new]', new_reminder_path, remote: true  if can_edit? %>
<% else %>
    <p>
        <%= @reminder.body.html_safe %>
    </p>
    <%= link_to '[edit]', edit_reminder_path(@reminder), remote: true, class: "edit-buttons" if can_edit? %>
<% end %>